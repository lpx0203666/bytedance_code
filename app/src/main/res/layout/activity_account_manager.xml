<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2196F3"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号管理"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
            
        <!-- Back button could be added here if needed, but hardware back works -->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前登录"
        android:padding="16dp"
        android:textColor="#888888"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/currentAccountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/ivCurrentAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:scaleType="centerCrop"/>
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            
            <TextView
                android:id="@+id/tvCurrentNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前用户"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
                
            <TextView
                android:id="@+id/tvCurrentUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="#888888"
                android:textSize="14sp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用中"
            android:textColor="#2196F3"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换账号"
        android:padding="16dp"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:id="@+id/llAccountList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"/>
    </ScrollView>

    <Button
        android:id="@+id/btnAddAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="+ 添加新账号"
        android:backgroundTint="#FFFFFF"
        android:textColor="#2196F3"
        android:layout_margin="16dp"
        android:textAllCaps="false"/>

</LinearLayout>